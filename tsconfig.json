{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "declaration": true,
    "noEmit": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  }
}
